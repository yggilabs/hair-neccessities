template#template
  style.
    * {
      box-sizing: border-box;
    }
    
    :host {
      height: 80vh;
      min-width: 100%;
      display: grid;
      grid-template-columns: 25% [content-start] 1fr [content-end] 25%;
      grid-template-rows: [title-start] auto [title-end subtitle-start] auto [subtitle-end] 1fr;      
      overflow: hidden;
      transition: background-color 300ms, filter 300ms;
      color: var(--font-color, #ffffff);
      background-color: var(--background-color, #212121);
      background-image: var(--background-image, none);
      background-size: cover;
    }
    
    :host(.active) {
      filter: none;
    }
    
    ::slotted(*) {
      display: none;
    }
    
    ::slotted([slot=title]) {
      display: block;
      opacity: 0;
      grid-row: title;
      grid-column: content;
      font-size: 1em;
      transform: translateY(50%);
      transition: opacity 300ms, transform 300ms;
    }
    
    :host(.active) ::slotted([slot=title]) {
      opacity: 1;
      transform: translateY(0);
    }
    
    ::slotted([slot=sub-title]) {
      display: block;
      opacity: 0;
      grid-row: subtitle;
      grid-column: content;
      font-size: 1em;      
      transform: translateX(50%);
      transition: opacity 300ms, transform 300ms;
    }
    
    :host(.active) ::slotted([slot=sub-title]) {
      opacity: .42;
      transform: translateX(0);
    }
  
  slot(name="title")
  slot(name="sub-title")
